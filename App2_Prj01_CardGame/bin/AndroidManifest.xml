<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.km.game"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/icon_image1"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name=".CardMaster"
            android:label="@string/title_activity_start_screen"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pe.km.menu.GameStartActivity"
            android:label="@string/title_activity_game_start"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="pe.km.menu.RankingActivity"
            android:label="@string/title_activity_ranking"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="pe.km.menu.OptionActivity"
            android:label="@string/title_activity_option"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="pe.km.menu.HelpActivity"
            android:label="@string/title_activity_help"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="pe.km.menu.playing.SetLevel"
            android:label="@string/title_activity_set_level"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="pe.km.menu.playing.GameFinish"
            android:label="@string/title_activity_game_finish"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>